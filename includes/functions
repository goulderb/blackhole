# functions
# Written by: predatorfreak

die() {
	echo "ERROR: $@"
	exit 1
}

warn() {
	echo "WARNING: $@"
}

failcheck()	{
$@
if [ $? = "1" ]; then
	die "$1 exited with an error."
elif [ $? = "2" ]; then
	die "$1 exited with status 2."
elif [ $? = "130" ]; then
	die "$1 terminated by signal 2"
elif [ $? = "137" ]; then
	die "$1 terminated by signal 9"
fi
}
