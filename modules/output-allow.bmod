# VERSION: 0.1
# REVISION: 0
# NAME: output-allow
# REQUIRES: core

if [ ! -z "${OUTPUT_ALLOW[*]}" ]; then
 for i in ${OUTPUT_ALLOW[@]}; do
  iptables -N OUTPUT_ALLOW
  local PORT=`echo $i | cut -d/ -f1`
  local PROTO=`echo $i | cut -d/ -f2`
  if [ -f $CONFDIR/extopts.conf ]; then
   EXTOPTS=`grep $PORT/output $CONFDIR/extopts.conf | cut -d: -f2 | sed 's/\s//'`
  fi
  iptables -I OUTPUT 1 -j OUTPUT_ALLOW
  iptables -I OUTPUT_ALLOW 1 -p $PROTO --dport $PORT $EXTOPTS -j ACCEPT
 done
fi
