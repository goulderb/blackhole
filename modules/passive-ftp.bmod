# VERSION: 0.1
# REVISION: 0
# NAME: passive-ftp
# REQUIRES: core

iptables -N PASSIVE_FTP
iptables -A INPUT -p tcp -m state --state ESTABLISHED -j PASSIVE_FTP
iptables -A OUTPUT -p tcp -m state --state ESTABLISHED -j PASSIVE_FTP
iptables -A PASSIVE_FTP -p tcp --sport 21 --dport 21 -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A PASSIVE_FTP -p tcp --sport 1024 --dport 1024 -m state --state ESTABLISHED -j ACCEPT
